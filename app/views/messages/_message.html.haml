.chat-main__message-list__detail{data: {message: {id: message.id}}}
  .chat-main__message-list__detail__info
    .chat-main__message-list__detail__info__name
      = message.user.name
    .chat-main__message-list__detail__info__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__detail__message
    - if message.content.present?
      %p
        = message.content
    =image_tag message.image.url, class: 'Message__image' if message.image.present?